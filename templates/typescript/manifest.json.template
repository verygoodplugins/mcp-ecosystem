{
  "manifest_version": "0.2",
  "name": "io.github.verygoodplugins/mcp-{name}",
  "display_name": "{display_name}",
  "version": "1.0.0",
  "description": "{description}",

  "long_description": "# {display_name}\n\n{long_description}\n\n## Features\n\n- Feature 1\n- Feature 2\n\n## About Very Good Plugins\n\nBuilt by [Very Good Plugins](https://verygoodplugins.com/?utm_source=mcpb), creators of WP Fusion and other WordPress integration tools.\n\n---\n\nðŸ§¡ Part of the [VGP MCP Ecosystem](https://github.com/verygoodplugins) - Open source AI tools for WordPress businesses",

  "author": {
    "name": "Very Good Plugins",
    "email": "support@verygoodplugins.com",
    "url": "https://verygoodplugins.com/?utm_source=mcpb"
  },

  "icon": "assets/icon.png",

  "screenshots": [
    "assets/screenshots/main-usage.png"
  ],

  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/dist/index.js"],
      "env": {
        "API_KEY": "${user_config.api_key}"
      }
    }
  },

  "user_config": {
    "api_key": {
      "type": "string",
      "title": "API Key",
      "description": "Your API key from the service dashboard",
      "sensitive": true,
      "required": true
    }
  },

  "tools": [
    { "name": "example_tool", "description": "Example tool description" }
  ],

  "repository": {
    "type": "git",
    "url": "https://github.com/verygoodplugins/mcp-{name}"
  },

  "homepage": "https://verygoodplugins.com/mcp/?utm_source=mcpb",
  "documentation": "https://github.com/verygoodplugins/mcp-{name}#readme",
  "support": "https://github.com/verygoodplugins/mcp-{name}/issues",

  "privacy_policies": [
    "https://verygoodplugins.com/privacy-policy/?utm_source=mcpb"
  ],

  "license": "GPL-3.0",

  "keywords": [
    "mcp",
    "claude",
    "ai-tools",
    "wordpress",
    "{keyword1}",
    "{keyword2}",
    "automation",
    "verygoodplugins"
  ],

  "compatibility": {
    "claude_desktop": ">=1.0.0",
    "platforms": ["darwin", "win32", "linux"],
    "runtimes": {
      "node": ">=18.0.0"
    }
  }
}
